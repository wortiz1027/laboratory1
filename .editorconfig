root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{gradle,groovy,java,kt}]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.sql]
indent_size = 4

[*.{json,json5}]
indent_style = tab
indent_size = 4

[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 120

[Makefile]
indent_style = tab
